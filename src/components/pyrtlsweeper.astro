---
export interface Link {
    title: string;
    url: string;
}

export interface Props {
    pageTitle: string;
    pageSubtitle?: string;
    links: Link[];
}

const { pageTitle, pageSubtitle, links } = Astro.props;
---

<div class="container">
    <h1 class="title">{pageTitle}</h1>
    {pageSubtitle && <h2 class="subtitle">{pageSubtitle}</h2>}
    <ul class="links">
        {
            links.map((link) => (
                <li>
                    <a href={link.url} class="link">
                        {link.title}
                    </a>
                </li>
            ))
        }
    </ul>
    <footer class="footer"></footer>
        <a href="/" class="footer-link">
            &copy; {new Date().getFullYear()} Edwin Chang
        </a>
    </footer>
</div>

<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        min-width: 300px;
        padding: 48px 24px;
        margin: 0 auto;
    }

    .title {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 2rem;
        text-align: center;
    }

    .subtitle {
        font-size: 1.25rem;
        margin-bottom: 3rem;
        text-align: center;
    }

    .links {
        list-style: none;
        padding: 0;
        margin: 0;
        width: 100%;
        max-width: 400px;
    }

    .link {
        display: block;
        padding: 0.75rem 1rem;
        margin-bottom: 0.5rem;
        text-align: center;
        text-decoration: none;
        color: #000000;
        background: #f0f0f0;
        border-radius: 8px;
    }

    .link:hover {
        background: #f4f4f4;
    }

    .footer {
        margin-top: 4rem;
    }
    .footer-link {
        text-decoration: none;
        color: #000000;
        font-size: 0.875rem;
    }
</style>
